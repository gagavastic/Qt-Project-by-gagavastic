resource_name = "boompup"
script/source = "extends CharacterBody2D

@onready var l = $\"../Line2D\"
const SPEED = 250.0
const JUMP_VELOCITY = -100
@onready var anim = $Area2D/AnimatedSprite2D
@onready var player = $\"../seal\"
var d = false
@onready var  varg = $\"../CharacterBody2D2\"
var fgh = 10
@onready var vrag2 = $\"../scelelook\"


func _physics_process(delta: float) -> void:
	# Add the gravity.
	if not is_on_floor():
		velocity.y += 100 * delta

		
	# Handle jump.
	if Input.is_action_just_pressed(\"pumbom\"):
		if fgh >= 1:
				show()
				fgh -= 1

				velocity.x +=600
				_on_timer_timeout()
				d = true

	if Input.is_action_just_pressed(\"pumboom2\"):
		if fgh >= 1:
				show()
				fgh -= 1
				velocity.x -=600
				anim.play(\"default\")
				_on_timer_timeout()
				d = true

	move_and_slide()



func _on_timer_timeout() -> void:
	if is_instance_valid(player):
		position = player.position
	
	


func _on_area_2d_body_entered(_body: Node2D) -> void:
	if d:
		if \"hp\" in _body and _body != player:
			_body.hp -= 1
			anim.play(\"default\")
			print(_body.hp)
			hide()
			position = l.position
			if _body.hp <= 0:
				_body.queue_free()
		if _body == vrag2:
			vrag2.hp -= 1
			anim.play(\"default\")
			print(vrag2.hp)
			hide()
		
			
	move_and_slide()
"

